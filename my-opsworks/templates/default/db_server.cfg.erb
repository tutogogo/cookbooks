define host{
        use                     linux-server            ; Name of host template to use
        host_name               <%= @db_host %>
        alias                   Database Server <%= @web_host %>
        address                 <%= @db_host %>
        }

define service{
        use generic-service
        host_name <%= @db_host %>
        service_description CPU Load
        check_command check_nrpe!check_load
        }


